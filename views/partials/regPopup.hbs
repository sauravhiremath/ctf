<div class="popupContainer m-auto w-50">

    <div class="topBar p-2 d-flex justify-content-between">
        <div><strong>Sign Up for CTF</strong></div>
        <div></div>
        <img src="/static/images/closeIcon.png">
    </div>

    <div class="logoContainer p-5">
        <img src="/static/images/logo.png">
    </div>

    <div><hr class="accent-popup orange-accent-popup"></div>

    <div class="formContainer pl-3 py-4">
        <form>
            <div class="align-items-center">
                <div class="tags d-inline-block">Name: *</div> <input type="text" name="name" class="m-2">
            </div>
            <div class="align-items-center">
                <div class="tags d-inline-block">Username: *</div> <input type="text" name="username" class="m-2">
            </div>
            <div class="align-items-center">
                <div class="tags d-inline-block">Password: *</div> <input type="password" name="password" class="m-2">
            </div>
            <div class="align-items-center">
                <div class="tags d-inline-block">Reg. No:</div> <input type="text" name="regNo" class="m-2">
            </div>
            <div class="align-items-center">
                <div class="tags d-inline-block">Email: *</div> <input type="text" name="email" class="m-2">
            </div>
            <div class="align-items-center">
                <div class="tags d-inline-block">Phone: *</div> <input type="text" name="phoneNo" class="m-2">
            </div>
            <div class="d-flex justify-content-end px-4 mt-4">
                <button type="submit" class="ml-3">Submit</button>
                <button class="ml-3">Cancel</button>
            </div>
        </form>
    </div>
</div>
