<div id="registerPopup" class="modal mt-2" role="dialog" aria-hidden="true" tabindex="-1">
    <div class="m-auto popupContainer">

        <div class="topBar p-2 d-flex justify-content-between align-items-center">
            <div><strong>Sign Up for CTF</strong></div>
            <div></div>
            <button data-dismiss="modal" class="closeIcon"></button>
        </div>

        <div class="logoContainer p-5">
            <img src="/static/images/logo.png">
        </div>

        <div>
            <hr class="accent-popup orange-accent-popup">
        </div>

        <div class="formContainer pl-3 py-4">
            <form id="registerForm">
                <div class="align-items-center m-2">
                    <div class="tags d-inline-block">Name: *</div>
					<input type="text" name="name">
                    <span class="emsg hidden" id="nameError">Name: Min length-3 Max length-20</span>
                </div>
                <div class="align-items-center m-2">
                    <div class="tags d-inline-block">Username: *</div>
					<input type="text" name="username">
                    <span class="emsg hidden" id="usernameError">Min length-3 Max length-20</span>
                </div>
                <div class="align-items-center m-2">
                    <div class="tags d-inline-block">Password: *</div>
					<input type="password" name="password">
                    <span class="emsg hidden" id="passwordError">Min length-5 Max length-15</span>
                </div>
                <div class="align-items-center m-2">
                    <div class="tags d-inline-block">Reg. No:</div>
                    <input type="text" name="regNo">
                    <span class="emsg hidden" id="regnoError">Please Enter a Valid Reg No</span>
                </div>
                <div class="align-items-center m-2">
                    <div class="tags d-inline-block">Email: *</div>
                    <input type="text" name="email">
                    <span class="emsg hidden" id="emailError">Please Enter a Valid E-mail</span>
                </div>
                <div class="align-items-center m-2">
                    <div class="tags d-inline-block">Phone: *</div>
                    <input type="text" name="phoneNo">
                    <span class="emsg hidden" id="phoneError">Please Enter a Valid Phone Number</span>
                </div>
                <div class="d-flex justify-content-end px-4 mt-4">
                    <button type="submit" class="ml-3" id="registerSubmitBtn" disabled>Submit</button>
                    <button data-dismiss="modal" aria-label="Close" class="ml-3">Cancel</button>
                </div>
            </form>
            <div class="post-form-content">
                <p>
                    You have signed up for CSI-CTF!<br>
                    We have sent you an verification email on your registered email-id. Please click on the verification
                    link in the email to proceed.
                </p>
            </div>
        </div>
    </div>
</div>
